<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <layer-list>
            <item>
                <shape>
                    <solid android:color="#eee" />//边框颜色
                </shape>
            </item>
            <!--    想保留哪一边就设置哪一边边框，列如只有下边框：bottom="0.7dp"，相应的有上top="",left="",right=""    -->
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="#F3F3F3" />//整个框背景颜色
                </shape>
            </item>
        </layer-list>

    </item>

    <item>

        <layer-list>
            <item>
                <shape>
                    <solid android:color="#eee" />//边框颜色
                </shape>
            </item>
            <!--    想保留哪一边就设置哪一边边框，列如只有下边框：bottom="0.7dp"，相应的有上top="",left="",right=""    -->
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="#FFFFFF" />//整个框背景颜色
                </shape>
            </item>
        </layer-list>

    </item>

</selector>