<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackColor"
    android:orientation="vertical"
    android:padding="20dp">

    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/left"
            android:gravity="center_vertical"
            android:text="  点位信息"
            android:textColor="#000"
            android:textSize="23dp" />


    </LinearLayout>

    <!--编号-->
    <LinearLayout
        style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="编号" />

        <TextView
            android:id="@+id/numberText"
            style="@style/style_point_info_fix_text"  />

    </LinearLayout>

    <!--点位名称-->
    <LinearLayout style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="点位名称" />

        <TextView
            android:id="@+id/pointNameEdit"
            style="@style/style_point_info_fix_text" />

    </LinearLayout>

    <!--详细地址-->
    <LinearLayout style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="详细地址" />

        <TextView
            android:id="@+id/detailAddressEdit"
            style="@style/style_point_info_fix_text" />

    </LinearLayout>

    <!--经度-->
    <LinearLayout style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="经度" />

        <TextView
            android:id="@+id/longitude"
            style="@style/style_point_info_fix_text" />

    </LinearLayout>

    <!--纬度-->
    <LinearLayout style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="纬度" />

        <TextView
            android:id="@+id/latitudeEdit"
            style="@style/style_point_info_fix_text" />

    </LinearLayout>

    <!--所属街道-->
    <LinearLayout style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="所属街道" />

        <TextView
            android:id="@+id/streetSpinner"
            style="@style/style_point_info_fix_text" />

    </LinearLayout>

    <!--派出所-->
    <LinearLayout style="@style/style_survey_linear">

        <top.systemsec.survey.custom_view.MyHintTextView
            style="@style/style_point_info_text"
            android:text="派出所" />

        <TextView
            android:id="@+id/policeSpinner"
            style="@style/style_point_info_fix_text" />

    </LinearLayout>


</LinearLayout>