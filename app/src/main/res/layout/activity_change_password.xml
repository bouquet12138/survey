<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/style_title"
            android:text="修改密码" />

        <ImageView
            android:id="@+id/backImage"
            style="@style/style_back_image" />
    </RelativeLayout>


    <!--旧密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="旧密码"
            android:textColor="#555" />

        <EditText
            android:id="@+id/oldPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_input"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:padding="10dp" />

    </LinearLayout>

    <!--提示-->
    <TextView
        android:id="@+id/oldPasswordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:textColor="#F71414"
        android:textSize="16dp" />

    <!--新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="新密码"
            android:textColor="#555" />

        <EditText
            android:id="@+id/newPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_input"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:padding="10dp" />

    </LinearLayout>

    <!--提示-->
    <TextView
        android:id="@+id/newPasswordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:textColor="#F71414"
        android:textSize="16dp" />

    <!--新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="确认新密码"
            android:textColor="#555" />

        <EditText
            android:id="@+id/confirmPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_input"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:padding="10dp" />

    </LinearLayout>

    <!--提示-->
    <TextView
        android:id="@+id/confirmPasswordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:textColor="#F71414"
        android:textSize="16dp" />

    <Button
        android:id="@+id/submitBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_bt"
        android:enabled="false"
        android:text="提  交"
        android:textColor="#fff"
        android:textSize="20dp" />

</LinearLayout>